---
import Spotlight from "../Spotlight";
import SpotlightCard from "../SpotlightCard.astro";
---

<!-- Card Spotlight Component -->
<section class="relative flex flex-col justify-center overflow-hidden">
  <div class="w-full max-w-screen-xl mx-auto px-4 md:px-6 py-24">
    <h2 class="text-5xl font-bold mb-8">
      Nuestros <span class="font-outline-1 text-transparent">servicios</span>
    </h2>
    <!-- Cards container -->

    <Spotlight
      className="max-w-sm mx-auto grid gap-6 lg:grid-cols-3 items-start lg:max-w-none group"
      data-spotlight
    >
      {/* Card #1 */}
      <SpotlightCard
        title="Páginas Corporativas"
        description="Destaca tu empresa de tu competencia con un sitio web moderno con WordPress."
        button="Más información"
        imageUrl="https://cruip-tutorials.vercel.app/spotlight-effect/card-01.png"
        href="https://cruip-tutorials.vercel.app/"
      />
      {/* Card #2 */}
      <SpotlightCard
        title="Landing Page"
        description="Diseñada para captar clientes y generar leads respecto a un producto o servicio."
        button="Más información"
        imageUrl="https://cruip-tutorials.vercel.app/spotlight-effect/card-02.png"
        href="https://cruip-tutorials.vercel.app/"
      />
      {/* Card #3 */}
      <SpotlightCard
        title="Ecoommerce"
        description="Vende y gestiona tus productos en internet y acepta pagos online directamente en tu sitio web."
        button="Más información"
        imageUrl="https://cruip-tutorials.vercel.app/spotlight-effect/card-03.png"
        href="https://cruip-tutorials.vercel.app/"
      />
    </Spotlight>

    <!-- End: Cards container -->
  </div>
</section>
